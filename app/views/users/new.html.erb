<h2>Create an Account</h2>
<%= form_for(@user) do |f| %>

  <%= f.label :email, "Email Address" %>
  <%= f.text_field :email  %>
  <br>

  <%= f.label :username %>
  <%= f.text_field :username  %>
  <br>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>

  <%= f.submit "Create an Account",  class: "btn" %>
<% end  %>
